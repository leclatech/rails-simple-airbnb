<h1>All our Flats</h1>
<h3><%= link_to "Add a flat", "/flats/new"  %></h3>
<ul>
  <% @flats.each do |flat| %>
    <li><%= link_to flat.name, flat_path(flat) %></li>
    <li><%= flat.address %></li>
    <li><%= flat.description %></li>
    <li><%= flat.price_per_night %> $</li>
    <li><%= flat.number_of_guests %></li>
    <br>
  <% end %>
</ul>
